{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "application",
    "sourceRoot": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    
     "composite": false
  },
  "compileOnSave": true,
  "include": [
     "src",
  ],
  "nodemonConfig": {
    "watch": "src/**/*.ts",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 3000
  }
}
